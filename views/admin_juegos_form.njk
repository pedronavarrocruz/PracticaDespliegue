{% extends "admin_base.njk" %}

{% block titulo %}Juegos | Editar{% endblock %}

{% block contenido %}

    <h1>Edici√≥n de juego existente</h1>

    {% if (juego) %}
        <form action="/admin/juegos/{{ juego.id }}" method="post">
            <input type="hidden" name="_method" value="put" />
            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" class="form-control" name="nombre" 
                    placeholder="Nombre del juego..." value="{{ juego.nombre }}"/>
            </div>
            <div class="form-group">
                <label for="descripcion">Descripcion:</label>
                <input type="text" class="form-control" name="descripcion"
                    placeholder="Descripcion del juego..." value="{{ juego.descripcion }}"/>
            </div>
            <div class="form-group">
                <label for="precio">Precio:</label>
                <input type="text" class="form-control" name="precio"
                    placeholder="Precio del juego..." value="{{ juego.precio }}"/>
            </div>
            <div class="form-group">
                <label for="edad">Edad:</label>
                <input type="text" class="form-control" name="edad"
                    placeholder="Edad del juego..." value="{{ juego.edad }}"/>
            </div>
            <div class="form-group">
                <label for="tipo">Tipo:</label>
                <input type="text" class="form-control" name="tipo"
                    placeholder="Tipo del juego..." value="{{ juego.tipo }}"/>
            </div>
            <div class="form-group">
                <label for="jugadores">Jugadores:</label>
                <input type="text" class="form-control" name="jugadores"
                    placeholder="Jugadores del juego..." value="{{ juego.jugadores }}"/>
            </div>
            <div class="form-group">
                <label for="imagen">Imagen:</label>
                <input type="file" name="imagen" id="imagen" value="{{juego.imagen}}">
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    {% else %}
        <form action="/admin/juegos" method="post">
            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" class="form-control" name="nombre" 
                    placeholder="Nombre del juego..."/>
            </div>
            <div class="form-group">
                <label for="descripcion">Descripcion:</label>
                <input type="text" class="form-control" name="descripcion"
                    placeholder="Descripcion del juego..."/>
            </div>
            <div class="form-group">
                <label for="precio">Precio:</label>
                <input type="text" class="form-control" name="precio"
                    placeholder="Precio del juego..."/>
            </div>
            <div class="form-group">
                <label for="edad">Edad:</label>
                <input type="text" class="form-control" name="edad"
                    placeholder="Edad del juego..."/>
            </div>
            <div class="form-group">
                <label for="tipo">Tipo:</label>
                <input type="text" class="form-control" name="tipo"
                    placeholder="Tipo del juego..."/>
            </div>
            <div class="form-group">
                <label for="jugadores">Jugadores:</label>
                <input type="text" class="form-control" name="jugadores"
                    placeholder="Jugadores del juego..."/>
            </div>
            <div class="form-group">
                <label for="imagen">Imagen:</label>
                <input type="file" name="imagen" id="imagen">
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    {% endif %}

{% endblock %}
